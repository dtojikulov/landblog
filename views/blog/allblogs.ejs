<%- include('../partials/header'); -%>

<ul class="blogs-list">
  <% if (blogs.length > 0) { %>
    <% blogs.forEach(blog => { %>
      <li class="blog-card">
        <h4><%= blog.title %></h4>
        <p><%= blog.snippet %></p>
        <button class="btn"><a href="/blog/<%= blog._id %>">Open</a></button>
      </li>
    <% }) %>
  <% } else { %>
    <h3>There are no blogs to display...</h3>
  <% } %>
</ul>

<%- include('../partials/footer'); -%>